#Decrease udp timeouts
sysctl net.ipv4.netfilter.ip_conntrack_udp_timeout=5
sysctl net.ipv4.netfilter.ip_conntrack_udp_timeout_stream=30

#Decrease tcp timeouts
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_syn_sent=10
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_syn_sent2=10     
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_syn_recv=20      
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_established=3600
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_fin_wait=20
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_close_wait=10
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_last_ack=5
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_time_wait=5
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_close=5
sysctl net.ipv4.netfilter.ip_conntrack_tcp_timeout_max_retrans=20
sysctl net.ipv4.tcp_fin_timeout=10

